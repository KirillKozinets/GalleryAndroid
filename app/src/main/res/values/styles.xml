<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="DarkPreferencesTheme">
        <item name="android:textColor">@color/whitegray</item>
        <item name="android:textColorSecondary">@color/whitegray2</item>
    </style>

    <style name="LightPreferencesTheme">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textColorSecondary">@color/whitegray</item>
    </style>

    <style name="AppTheme" parent="Theme.Design.Light">
        <item name="colorPrimary">@color/gray</item>gr
        <item name="colorPrimaryDark">@color/gray</item>
        <item name="colorAccent">#22a7e0</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="preferenceTheme">@style/DarkPreferencesTheme</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryDark">@color/gray</item>
        <item name="colorAccent">#22a7e0</item>

        <item name="android:textColor">@color/whitegray</item>
        <item name="android:windowBackground">@color/gray</item>
        <item name="android:itemBackground">@color/gray2</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlowIcon</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DarkTheme2" parent="Theme.Design.NoActionBar">
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryDark">@color/gray</item>
        <item name="colorAccent">#22a7e0</item>

        <item name="android:textColor">@color/whitegray</item>
        <item name="android:windowBackground">@color/gray</item>
        <item name="android:itemBackground">@color/gray2</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlowIcon</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/change_image_transform</item>
        <item name="android:windowSharedElementExitTransition">@transition/change_image_transform</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
    </style>


    <style name="LightTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryDark">@color/whitegray2</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorAccent">#22a7e0</item>

        <item name="android:textColor">@color/dark</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlowIcon</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="LightTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/whitegray2</item>
        <item name="colorAccent">#22a7e0</item>

        <item name="android:textColor">@color/dark</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlowIcon</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/change_image_transform</item>
        <item name="android:windowSharedElementExitTransition">@transition/change_image_transform</item>
    </style>

    <style name="MyTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="ActioBarBackground" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#22a7e0</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#b80f22</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>


    <style name="OverFlowIcon" parent="Theme.AppCompat">
        <item name="android:src">@drawable/menu_icon</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Launcher.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Launcher.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Launcher.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyCheckBox" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/blue</item>
    </style>

</resources>

